---
import { Image } from "astro:assets";
import BaseLayout from "../layouts/BaseLayout.astro";
import profilePic from "../assets/profilePic.jpg";

const pageTitle = "Home Page";
---

<BaseLayout pageTitle={pageTitle}>
	<div id="content-container">
		<h1 id="hello">Hello!üëãüèº</h1>
		<h1>Welcome to My Website</h1>
		<h2>I'm Ivan <br /> A Computer Engineering üíª Student</h2>
		<div id="image-container">
			<Image src={profilePic} alt="My profile picture" id="profile" />
		</div>
	</div>
</BaseLayout>

<style>
	#hello {
		font-size: 3rem;
	}

	#content-container {
		position: relative;
		max-width: 1000px;
		width: 100%;
		height: auto;
		min-height: 20vh;
		aspect-ratio: 10 / 3;
		margin: 3rem auto;
	}

	#profile {
		position: absolute;
		right: -14vw; /* Changed to viewport units for responsiveness */
		top: 1vh; /* Changed to viewport units */
		border-radius: 50%;
		width: 60%; /* Reduced slightly for better fit on smaller screens */
		max-width: 400px; /* Added max-width to prevent oversized images */
		height: auto; /* Auto height to maintain aspect ratio */
		aspect-ratio: 1 / 1; /* Ensures circular shape */
		opacity: 0.9;
	}

	/* Media query for smaller screens */
	@media screen and (max-width: 768px) {
		#hello {
			font-size: 2rem; /* Smaller font size for tablets/mobile */
		}

		#content-container {
			min-height: 15vh; /* Adjusted for smaller screens */
		}

		#profile {
			width: 50%; /* Larger relative width for visibility */
			right: -17vw; /* Adjusted positioning */
			top: 0.5vh;
		}
	}

	/* Media query for very small screens */
	@media screen and (max-width: 480px) {
		#hello {
			font-size: 1.5rem; /* Further reduced font size */
		}

		#content-container {
			min-height: 10vh;
		}

		#profile {
			width: 60%; /* Even larger relative width for small screens */
			max-width: 200px; /* Smaller max-width for tiny screens */
			right: 1vw;
		}
	}
</style>
