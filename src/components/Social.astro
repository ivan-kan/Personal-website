---
const { platform, username } = Astro.props;
---

<a href=`https://www.${platform}.com/${username}` target="_blank">
    <img src="../icons/github.svg" alt={platform} style="width:42px;height:42px;" />
</a>

<style>
    a {
        padding: 0.5rem 1rem;
        color: white;
        background-color: #4c1d95;
        text-decoration: none;
        margin-right: 20px;
    }
</style>
